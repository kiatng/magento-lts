<script type="text/javascript">
//<![CDATA[
document.observe('dom:loaded', function() {
    var chatIcon = $('aiagent-chat-icon');
    var chatWindow = $('aiagent-chat-window');
    var chatClose = $$('.aiagent-chat-close')[0];
    var messageInput = $('aiagent-message-input');
    var sendButton = $('aiagent-send-button');
    var chatMessages = $('aiagent-chat-messages');
    var toggleGenerator = $('aiagent-toggle-generator');
    var contentGenerator = $$('.aiagent-content-generator')[0];
    var contentBack = $$('.aiagent-content-back')[0];
    var contentType = $('aiagent-content-type');
    var contentPrompt = $('aiagent-content-prompt');
    var generateButton = $('aiagent-generate-button');
    var contentResult = $('aiagent-content-result');
    var contentOutput = $('aiagent-content-output');
    var copyButton = $('aiagent-copy-button');
    
    // Toggle chat window
    chatIcon.observe('click', function() {
        chatWindow.toggle();
        if (chatWindow.visible()) {
            messageInput.focus();
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    });
    
    // Close chat window
    chatClose.observe('click', function() {
        chatWindow.hide();
    });
    
    // Send message on button click
    sendButton.observe('click', function() {
        sendMessage();
    });
    
    // Send message on Enter key press
    messageInput.observe('keypress', function(e) {
        if (e.keyCode === 13 && !e.shiftKey) {
            e.stop();
            sendMessage();
        }
    });
    
    // Toggle content generator
    toggleGenerator.observe('click', function() {
        contentGenerator.show();
        contentResult.hide();
    });
    
    // Back to chat
    contentBack.observe('click', function() {
        contentGenerator.hide();
    });
    
    // Generate content
    generateButton.observe('click', function() {
        var prompt = contentPrompt.value.trim();
        var type = contentType.value;
        
        if (prompt === '') {
            return;
        }
        
        // Show loading
        generateButton.disabled = true;
        generateButton.update('<?php echo $this->__('Generating...'); ?>');
        
        // Send request to server
        new Ajax.Request('<?php echo $this->getGenerateContentUrl(); ?>', {
            method: 'post',
            parameters: {
                prompt: prompt,
                type: type
            },
            onSuccess: function(response) {
                var data = response.responseJSON;
                
                generateButton.disabled = false;
                generateButton.update('<?php echo $this->__('Generate'); ?>');
                
                if (data.error) {
                    contentOutput.update(data.message);
                } else {
                    contentOutput.update(data.content);
                }
                
                contentResult.show();
            },
            onFailure: function() {
                generateButton.disabled = false;
                generateButton.update('<?php echo $this->__('Generate'); ?>');
                
                contentOutput.update('<?php echo $this->__('Sorry, there was an error generating content. Please try again later.'); ?>');
                contentResult.show();
            }
        });
    });
    
    // Copy to clipboard
    copyButton.observe('click', function() {
        var content = contentOutput.innerHTML;
        
        // Create temporary textarea
        var textarea = document.createElement('textarea');
        textarea.value = content;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
        
        // Show copied message
        copyButton.update('<?php echo $this->__('Copied!'); ?>');
        setTimeout(function() {
            copyButton.update('<?php echo $this->__('Copy to Clipboard'); ?>');
        }, 2000);
    });
    
    // Send message function
    function sendMessage() {
        var message = messageInput.value.trim();
        
        if (message === '') {
            return;
        }
        
        // Add user message to chat
        addMessage(message, true);
        
        // Clear input
        messageInput.value = '';
        
        // Show loading indicator
        var loadingMessage = '<?php echo $this->__('Thinking...'); ?>';
        var loadingId = addMessage(loadingMessage, false);
        
        // Send message to server
        new Ajax.Request('<?php echo $this->getSendMessageUrl(); ?>', {
            method: 'post',
            parameters: {
                message: message
            },
            onSuccess: function(response) {
                var data = response.responseJSON;
                
                // Remove loading message
                $(loadingId).remove();
                
                if (data.error) {
                    addMessage(data.message, false);
                } else {
                    addMessage(data.response, false);
                }
            },
            onFailure: function() {
                // Remove loading message
                $(loadingId).remove();
                
                addMessage('<?php echo $this->__('Sorry, there was an error processing your request. Please try again later.'); ?>', false);
            }
        });
    }
    
    // Add message to chat
    function addMessage(message, isFromUser) {
        var messageId = 'aiagent-message-' + new Date().getTime();
        var messageContent = message.replace(/\n/g, '<br>');
        var copyButton = '';
        
        if (!isFromUser) {
            copyButton = '<button class="aiagent-copy-message" data-message-id="' + messageId + '">Copy</button>';
        }
        
        var messageHtml = '<div id="' + messageId + '" class="aiagent-message ' + (isFromUser ? 'aiagent-message-user' : 'aiagent-message-ai') + '">' +
            '<div class="aiagent-message-content">' + messageContent + copyButton + '</div>' +
            '</div>';
        
        chatMessages.insert(messageHtml);
        chatMessages.scrollTop = chatMessages.scrollHeight;
        
        // Add click event for copy button
        if (!isFromUser) {
            setTimeout(function() {
                $$('.aiagent-copy-message[data-message-id="' + messageId + '"]').each(function(button) {
                    button.observe('click', function() {
                        copyMessageToClipboard(messageId, message);
                    });
                });
            }, 100);
        }
        
        return messageId;
    }
    
    // Copy message to clipboard
    function copyMessageToClipboard(messageId, message) {
        var textarea = document.createElement('textarea');
        textarea.value = message;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
        
        var button = $$('.aiagent-copy-message[data-message-id="' + messageId + '"]')[0];
        var originalText = button.innerHTML;
        button.update('Copied!');
        setTimeout(function() {
            button.update(originalText);
        }, 2000);
    }
});
//]]>
</script>
