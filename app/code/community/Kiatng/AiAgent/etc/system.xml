<?xml version="1.0"?>
<config>
    <tabs>
        <kiatng translate="label">
            <label>Kiatng</label>
            <sort_order>400</sort_order>
        </kiatng>
    </tabs>
    <sections>
        <aiagent translate="label" module="aiagent">
            <label>AI Agent</label>
            <tab>kiatng</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable AI Agent</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <customer_groups translate="label">
                            <label>Enable for Customer Groups</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>aiagent/system_config_source_customerGroups</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </customer_groups>
                    </fields>
                </general>
                <api translate="label">
                    <label>API Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <provider translate="label">
                            <label>AI Provider</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aiagent/system_config_source_provider</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </provider>
                        <model translate="label">
                            <label>LLM Model</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aiagent/system_config_source_model</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <provider>openai</provider>
                            </depends>
                        </model>
                        <anthropic_model translate="label">
                            <label>Anthropic Model</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aiagent/system_config_source_anthropicModel</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <provider>anthropic</provider>
                            </depends>
                        </anthropic_model>
                        <nvidia_model translate="label">
                            <label>Nvidia Model</label>
                            <frontend_type>select</frontend_type>
                            <source_model>aiagent/system_config_source_nvidiaModel</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <provider>nvidia</provider>
                            </depends>
                        </nvidia_model>
                        <key translate="label">
                            <label>API Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </key>
                    </fields>
                </api>
                <features translate="label">
                    <label>Features</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_rag translate="label">
                            <label>Enable RAG for Catalog</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_rag>
                        <enable_cag translate="label">
                            <label>Enable CAG for CMS</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_cag>
                        <enable_web_search_admin translate="label">
                            <label>Enable Web Search for Admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable_web_search_admin>
                    </fields>
                </features>
            </groups>
        </aiagent>
    </sections>
</config>
